.Header
    background-color #00000055
    position fixed
    z-index: 1
    width: 100%
    .header-wrapper
        width: 85%
        margin: 0 auto
        display flex
        justify-content: space-between
        align-items: center
        .logo
            padding 7px
            img 
                max-width 77px
                min-width 50px
                transition: .3s
                @media screen and (max-width: 850px)
                    max-width 47px
                    min-width 20px
                    transition: .3s
        .big 
            display flex
            justify-content space-between
            align-items: center
            width 100%
            .small-ul
                display none
            ul
                display: flex
                justify-content space-between
                align-items: center
                width: 20%          
                .vertical-line
                    width 1px
                    background-color: #A29895
                    height 40px
            @media screen and (max-width: 850px)
                display: none
        .small
            display: none
            justify-content: space-between
            align-items: center
            width: 100%
            @media screen and (max-width: 850px)
                display flex
            .wrapper
                position relative
                .show
                    font-size: 20px
                    color #EFE7E4
                .show_small
                    right 40px
                    transition: .3s
                    background-color #00000055
                    top 45px
                    position absolute
                    li
                        a
                            font-size: 0px
                            padding: 0
                            color #EFE7E4
                            letter-spacing: 0px
                .open
                    padding: 15px 10px
                    transition: .3s
                    li
                        a
                            font-size: 14px
                            padding: 10px
                            color #EFE7E4
.item
    list-style none
    cursor pointer
    text-transform uppercase
    color #EFE7E4
    a
        transition: .3s
        width: 100%
        height 100% 
.on
    a
        color #fff
        transition: .3s
        border-bottom: 1px solid #Efff