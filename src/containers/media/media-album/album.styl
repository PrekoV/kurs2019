.Album
    background-image url("./style/wallpaper.jpg")
    background-repeat repeat
    background-attachment fixed
    min-height: 100vh
    .bg-wrapper
        height 100%
        background-color #000000cc
        min-height: 100vh
        .wrapper
            width: 90%
            margin: 0 auto
            padding: 100px 0 0 0
            position relative
            .name-wrapper
                display: flex
                justify-content: space-between
                align-items: center
                padding: 10px 10px
                .name 
                    font-size: 35px
                    text-transform uppercase
                    color #E7DFDD
                    text-align center
                    @media screen and (max-width: 500px)
                        font-size: 20px
                .short-line
                    margin: 0
                    width: 20%
                    display: block
                    min-width: 20px
            .album
                display: flex
                justify-content: space-between
                align-items: center
                flex-wrap: wrap
                width 100%
                height 100%
                .pic
                    margin: 20px auto
                    height 230px
                    transition: .3s
                    width: 30%
                    border 2px solid #E7DFDD
                    overflow hidden
                    min-width 280px
                    box-shadow 0 0 20px #000
                    cursor pointer
                    img 
                        width: 150%
                        transition: .3s
                        @media screen and (max-width: 800px)
                            width: 180%
                .pic:hover
                    transform: scale(1.1)