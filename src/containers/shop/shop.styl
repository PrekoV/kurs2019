.Shop
    background-image url("./style/MCRKerrang1.jpg")
    background-repeat no-repeat
    background-position 49% 0%
    background-size cover
    background-attachment fixed
    min-height: 100vh
    .shop-wrapper
        height 100%
        background-color #000000ba
        min-height: 100vh
        .products
            width: 90%
            margin: 0 auto
            padding: 110px 0 0 0
            margin-bottom: 20px
            position relative
            .list
                display: flex
                justify-content: space-between
                align-items: center
            .small
                display: none
                @media screen and (max-width: 850px)
                    display: block
                    width 100%
                    background-color #000000
                    border 1px solid #EFE7E4
                    color: #EFE7E4
                    font-size: 22px
                    text-transform uppercase
                    text-align: center
                    padding: 10px
                    border-radius: 30px
                    cursor pointer
            .line
                @media screen and (max-width: 850px)
                    display: none
            .small-ul
                // display: none
                height 0
                font-size: 0
                transition: .3s
                // overflow hidden
            .open
                // display: block
                // height 300px
                width 100%
                position: absolute
                transition: .3s
                top 160px
                left 0
                .small-li
                    width: 100%
                    height 35px
                    margin: 7px 0
                    background-color #EFE7E4
                    border 1px solid #000000aa
                    text-transform uppercase
                    text-align: center
                    color: #000
                    padding: 10px
                    border-radius: 30px
                    cursor pointer
                    transition: .3s
                    overflow hidden
                    text-overflow: ellipsis
                    font-size: 10px
                .small-li:hover
                    background-color #00000099
                    border 1px solid #EFE7E4
                    color: #EFE7E4
                    transition: .3s   
                    font-size: 12px
                .selected
                    background-color #00000099
                    border 1px solid #EFE7E4
                    color: #EFE7E4
                    transition: .3s  
                    font-size: 12px  
                // .selected
                //     background-color #00000099
                //     border 1px solid #EFE7E4
                //     color: #EFE7E4
            ul.big
                display flex
                justify-content: space-between
                align-items: center
                flex-wrap: wrap
                @media screen and (max-width: 850px)
                    display: none
                li
                    background-color #EFE7E4aa
                    text-transform uppercase
                    text-align: center
                    color: #000
                    padding: 10px
                    margin: 10px
                    border-radius: 30px
                    cursor pointer
                    width: 15%
                    min-width: 150px
                    font-size: 20px
                    height 45px
                    transition: .3s
                    overflow hidden
                    text-overflow: ellipsis
                    //border 1px solid #EFE7E4aa
                    @media screen and (max-width: 850px)
                        font-size: 10px
                        height 30px
                        min-width: 80px
                        margin: 5px
                li:hover
                    background-color #00000055
                    border 1px solid #EFE7E4
                    color: #EFE7E4
                    font-size: 22px
                    transition: .3s   
                    @media screen and (max-width: 850px)
                        font-size: 12px
                .selected
                    background-color #00000055
                    border 1px solid #EFE7E4
                    color: #EFE7E4
                    font-size: 22px
                    transition: .3s  
                    @media screen and (max-width: 850px)
                        font-size: 12px  
        .no-connection
            color #EFE7E4
            font-size: 40px
            text-align: center
            padding: 100px 0

    