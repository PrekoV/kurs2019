div.BuyProduct
    position: absolute
    background-color #000000aa
    width 100%
    height 100vh
    left 0
    top 0
    z-index: 1
    position: fixed
    .modal
        width 60%
        // height 400px
        max-width: 800px
        min-width: 300px
        background-color #EFE7E4
        transform: translate(50%, 70%)
        padding: 10px
        
        .close
            // margin-top: -60px
            position absolute
            top -40px
            right 0
            cursor pointer
            color: #D66347
            font-size: 30px
            text-align: end
            transition: .3s
        .close:hover
            color: #A72707
            transition: .3s
        .modal-wrapper
            // width: 90%
            margin: 0 auto
            border 2px dashed  #514346
            padding: 20px
            .prod-info
                display flex
                justify-content: space-between
                height 100%
                .img-wrapper
                    img
                        width: 200px
                        max-height: 200px
                .details
                    width: 100%
                    padding: 0 20px
                    p
                        color: #514346
                        padding: 10px 0
                        span
                            color: #514346
                            text-transform uppercase
                            font-weight: bold
            // .user
            .user
                form
                    display flex
                    justify-content: space-between
                    flex-direction: column
                    align-items: center
                    .input-wrapper
                        border 1px solid #514346
                        background-color #EFE7E4
                        width: 100%
                        input 
                            background-color #EFE7E4 
                            color #514346
                            width: auto
                            width 100%
                    button 
                        border 1px solid #514346
                        background-color #514346
                        color #EFE7E4 
                    button:hover
                        background-color #EFE7E4 
                        color #514346
                    .message
                        color #A72707
                        font-size: 12px
                        height 5px
                        padding 5px
                

        