*{
    margin: 0
    padding: 0
    box-sizing: border-box
    font-family "Raleway"
    color #EFE7E4
    letter-spacing: 1px
}

.container
    // background-image url("style/ddds.jpg")
    // background-repeat: no-repeat
    // background-size contain
    // width 90%
    // margin: 0 auto
a
    text-decoration none
    padding: 10px
a:hover
    color #fff
    transition: .3s
    border-bottom: 1px solid #E7DFDD
li
    list-style none
.line 
    max-width 800px
    min-width 150px
    width: 100%
    height 1px
    background-color #A29895
    margin: 45px auto
.short-line
    max-width 300px
    margin: 0 5px
    min-width 10px
    //width 20%
    height 1px
    background-color #A29895
    margin: 20px auto
h1 
    color #E7DFDD
    font-size: 40px
    text-transform uppercase
form
    .input-wrapper
        border 1px solid #EFE7E4
        width: 100%
        margin: 10px
        input 
            border none 
            outline: none 
            background-color #514346
            padding: 10px
            width: 100%
    button
        border: 1px solid #EFE7E4
        outline: none
        background-color #EFE7E4
        color #514346
        padding: 5px 10px
        width: 100px
        cursor pointer
        transition: .3s
    button:hover
        background-color #514346
        color #EFE7E4
        transition: .3s
