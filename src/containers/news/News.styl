.News
    background-color lightgrey
    .news-wrapper
        width: 85%
        margin: 0 auto
        .main
            .loading
                font-family "Roboto"
                color: black
                font-size: 16px
            .messages
                li
                    list-style none
                    max-width 800px
                    padding: 20px
                    .user
                        img
                            border 4px solid #AA1F1F
                            padding 0
                            border-radius 100%
                            width 100px
                            height 100px
                            margin-left 25px
                            overflow hidden
                    .text
                        background-color #CCB5B5
                        border 1px solid #AA1F1F
                        margin-top: -40px
                        margin-left 70px
                        p
                            color #000
                            font-size 16px
                            line-height 22px  
                            padding 30px 40px 
                            text-align justify
                            font-family "Roboto"
                            font-size: 16px

                            