.title
        color #514346
        font-size: 40px
        text-transform uppercase
        padding: 0 20px 20px 50px
        @media screen and (max-width: 850px)
            font-size: 24px
            padding: 0 20px 20px 20px
.News
    .idea
        height: 100vh
        background-image url("./style/MCR5_Header.jpg")
        background-repeat no-repeat
        background-position 55% 0%
        background-size cover
        .idea-bgr
            height 100%
            background-color #00000099
            .idea-wrapper
                text-align: center
                top 50%
                left 50%
                position absolute
                transform: translate(-50%, -50%)
                .not-a-band
                    color #CAC5C3
                    font-size: 14px
                    font-family "Raleway"
    .history
        width: 90%
        margin: 0 auto
        .history-wrapper
            .text
                .col
                    column-width 40%
                    column-count: 2
                    column-gap: 10%
                    @media screen and (max-width: 850px)
                        display: none
                    p
                        color #514346
                        text-indent 50px
                .col_hide
                    // min-height: 59vh
                    display: none
                    @media screen and (max-width: 850px)
                        display: block
                    p
                        color #514346
                        text-indent 20px
                        font-size: 12px
                    .read-more
                        display: none
                        p
                            color #514346
                            text-indent 20px
                            font-size: 12px
                    .show
                        display block
                    .read
                        color: #E87D91
                    .no
                        display:  none
        .line
            @media screen and (max-width: 850px)
                margin: 40px auto
    .listen
        height 100vh
        width: 100%
        background-image url("./style/My-Chemical-Romance-my-chemical-romance-38539766-1920-1080.jpg")
        background-repeat no-repeat
        background-size cover
        position relative
        background-position 55% 0%
        .listen-bg
            height 100%
            width: 100%
            background-color #00000099
            
            .listen-wrapper
                text-align: center
                position: absolute
                width: 85%
                top 50%
                left 50%
                transform: translate(-50%, -50%)
                .title
                    color #E7DFDD
                    font-size: 40px
                    text-transform uppercase
                    @media screen and (max-width: 400px)
                        font-size: 26px
                .albums
                    display flex
                    justify-content: space-around
                    align-items: center
                    flex-wrap: wrap
                    li
                        margin: 10px 0
                        img 
                            width 210px
                            height: 210px
                            border: 2px solid #E7DFDD
                            padding: 10px
                            transition: .3s
                            @media screen and (max-width: 1000px)
                                width 150px
                                height: 150px
                            @media screen and (max-width: 400px)
                                width 110px
                                height: 110px
                        // img:hover
                        //     border-color: #E87D91
                        .name
                            text-transform uppercase
                            padding-top: 15px
                            max-width: 180px
                            margin: 0 auto
                            text-align: center
                            transition: .3s
                            height 50px
                            cursor pointer
                            @media screen and (max-width: 850px)
                                font-size: 10px
                                max-width: 100px
                        .name:hover
                            transition: .3s
                            //color: #E87D91
                            padding-top: 10px
                    li:hover
                        img 
                            border-color: #E87D91
                            transition: .3s
                        .name
                            color: #E87D91
                            transition: .3s
